<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="plugin.experiment.commands.category">
      </category>
      <command
            name="Sample Command"
            categoryId="plugin.experiment.commands.category"
            id="plugin.experiment.commands.sampleCommand">
      </command>
      <category
            id="plugin.experiment.commands.time"
            name="Time Category">
      </category>
      <command
            categoryId="plugin.experiment.commands.time"
            id="plugin.experiment.commands.timeCommand"
            name="Time Command">
      </command>
      <category
            id="plugin.experiment.commands.check"
            name="Sample Check">
      </category>
      <command
            categoryId="plugin.experiment.commands.check"
            id="plugin.experiment.commands.checkCommand"
            name="Check Command">
      </command>
      <category
            id="plugin.experiment.commands.compile"
            name="Sample Compile">
      </category>
      <command
            categoryId="plugin.experiment.commands.compile"
            id="plugin.experiment.commands.compileCommand"
            name="Compile Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="plugin.experiment.commands.timeCommand"
            class="plugin.experiment.handlers.TimeHandler">
      </handler>
      <handler
            class="plugin.experiment.handlers.TimeHandler"
            commandId="plugin.experiment.commands.sampleCommand">
      </handler>
      <handler
            class="plugin.experiment.handlers.CheckHandler"
            commandId="plugin.experiment.commands.checkCommand">
      </handler>
      <handler
            class="plugin.experiment.handlers.CompileHandler"
            commandId="plugin.experiment.commands.compileCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="plugin.experiment.toolbars.sampleToolbar">
            <command
                  commandId="plugin.experiment.commands.sampleCommand"
                  icon="icons/play.png"
                  id="plugin.experiment.toolbars.sampleCommand"
                  tooltip="CronÃ´metro">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="plugin.experiment.toolbars.sampleToolbar">
            <command
                  commandId="plugin.experiment.commands.checkCommand"
                  icon="icons/finish_flag.png"
                  id="plugin.experiment.toolbars.checkCommand"
                  tooltip="Finalizar Tarefa">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="plugin.experiment.toolbars.sampleToolbar">
            <command
                  commandId="plugin.experiment.commands.compileCommand"
                  icon="icons/sample.gif"
                  id="plugin.experiment.toolbars.compileCommand"
                  tooltip="Compilar">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
